
<%= render 'navbar' %>



<div class= "body">
    <h1>Listing Articles</h1>
    
    <h3>Our blog has <%= Article.public_count %> articles and counting! </h3>
    <ol>
        <% @articles.each do |article| %>
            <% unless article.archived? %>
                    <li><%= link_to article.title, article_path(article) %> </li>
            <% end %>
        <% end %>
    </ol>

    <div>
        <% if user_signed_in? %>
            <%= link_to 'Add New Article', new_article_path %><br><br>
           <p> Welcome  <%= current_user.email %></p>

        <% else %>
            <p>
                Login To Add Article.
            </p>
        <% end %>
    </div>
</div>